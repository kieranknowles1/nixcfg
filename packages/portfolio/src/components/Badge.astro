---
interface Props {
  imgname: ImageMetadata;
  name: string;
  id: string;
}

const {
  imgname,
  name,
  id,
} = Astro.props;

// We deliberately don't use the <Image> component to avoid making any changes
// to the source image, as it contains a watermark to validate authenticity
---
<a
  class="credly-badge"
  href={`https://www.credly.com/badges/${id}/public_url`}
  target="_blank"
>
  <img src={imgname.src} alt={name}>
</a>
